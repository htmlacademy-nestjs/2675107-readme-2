generator client {
  provider = "prisma-client-js"
  output = "../../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum PostType {
  VIDEO
  TEXT
  QUOTE
  PHOTO
  LINK
}

enum PostStatus {
  PUBLISHED
  DRAFT
}

model Post {
  id               String      @id @default(uuid())

  type             PostType
  status           PostStatus  @default(PUBLISHED)

  authorId         String
  originalPostId   String?
  originalAuthorId String?
  isRepost         Boolean     @default(false)

  tags             String[]

  likesCount       Int         @default(0)
  commentsCount    Int         @default(0)

  createdAt        DateTime    @default(now())
  publishedAt      DateTime

  // связи 1:1
  video            PostVideo?
  text             PostText?
  quote            PostQuote?
  photo            PostPhoto?
  link             PostLink?

  comments         Comment[]
  likes            Like[]

  @@map("post")
}

model PostVideo {
  postId    String  @id
  title     String
  videoUrl  String

  post      Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post-video")
}

model PostText {
  postId        String  @id
  title         String
  announcement  String
  content       String

  post          Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post-text")
}

model PostQuote {
  postId        String  @id
  quote         String
  quoteAuthor   String

  post          Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post-quote")
}

model PostPhoto {
  postId    String  @id
  photoUrl  String

  post      Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post-photo")
}

model PostLink {
  postId          String  @id
  linkUrl         String
  linkDescription String?

  post            Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post-link")
}

model Comment {
  id          String    @id @default(uuid())
  message     String
  userId      String    @map("user_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  post        Post      @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId      String    @map("post_id")

  @@index([postId])
  @@map("comments")
}

model Like {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  post        Post      @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId      String    @map("post_id")

  @@index([postId])
  @@map("likes")
}
